    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style>
                /* Background gradient for the body */
                body {
                    background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
                }

                /* Custom background color for the header */
                .navbar-custom {
                    background-color: #4a4a4a;
                }

                /* Styling for the search, login, and register buttons */
                .btn-custom {
                    border-color: rgba(0, 0, 0, 0.2);
                    background-color: #6c757d;
                    color: white;
                    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
                }

                .navbar .nav-link[href="/Home/Privacy"] {
                    color: white !important;
        }

        /* Make the Login button text white */
                 .navbar .nav-link.btn-login {
                    color: white !important;
        }

            /* Optional: Add hover effect to make them stand out */
            .navbar .nav-link.btn-login:hover,
            .navbar .nav-link[href="/Home/Privacy"]:hover {
                color: #f0f0f0 !important; /* Slightly lighter white on hover */
                text-decoration: underline;
            }

                .btn-custom:hover {
                    background-color: #5a6268;
                     
                    color: white;
                    border-color: rgba(0, 0, 0, 0.4);
                }

                /* Navbar brand and icon styling */
                .navbar-brand img {
                    margin-right: 10px;
                    width: 50px;
                }

                .nav-item .nav-link img {
                    width: 25px;
                    margin-right: 8px;
                }

                /* Adjust icon sizes and alignment */
                .nav-item .btn img {
                    width: 22px;
                    margin-right: 8px;
                    transition: transform 0.3s;
                }

                .nav-item .btn:hover img {
                    transform: scale(1.1);
                }

                /* Navbar spacing */
                .navbar-nav .nav-item {
                    margin-left: 15px;
                }

                /* Adjust spacing between nav items and buttons */
                .ms-auto {
                    margin-left: auto;
                }

                .btn-custom.me-2 {
                    margin-right: 12px;
                }

                /* Footer styling */
                footer {
                    background-color: #4a4a4a;
                    padding: 20px 0;
                    text-align: center;
                    color: white;
                    border-top: 1px solid #bcbcbc;
                }

                footer .footer-container {
                    display: flex;
                    justify-content: space-around;
                    flex-wrap: wrap;
                    margin-bottom: 20px;
                }

                footer .footer-section {
                    flex: 1;
                    margin: 10px;
                    text-align: left;
                }

                footer .footer-section h6 {
                    font-weight: bold;
                    color: #17a2b8;
                    margin-bottom: 10px;
                }

                footer .footer-section ul {
                    list-style-type: none;
                    padding-left: 0;
                }

                footer .footer-section ul li {
                    margin-bottom: 8px;
                }

                footer .footer-section ul li a {
                    color: white;
                    text-decoration: underline;
                }

                footer .footer-section ul li a:hover {
                    text-decoration: none;
                }

                /* Social Media Icons Section */
        .footer .social-icons a {
            color: white;
            margin-right: 15px;
            font-size: 1.5rem;
            display: inline-flex;
            align-items: center;
            border: none;
            background-color: transparent;
        }

               .footer .social-icons a img {
            width: 20px;
            height: auto;
            vertical-align: middle;
        }

        .footer .social-icons a:hover {
            color: #17a2b8;
            text-decoration: none;
        }

                /* Dropdown styles */
                .dropdown-menu {
                    background-color: #f5f5f5;
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    padding: 0;
                }

                .dropdown-item {
                    color: #333;
                    padding: 10px 20px;
                    border-bottom: 1px solid #ddd;
                    transition: background-color 0.3s, color 0.3s;
                }

                .dropdown-item:last-child {
                    border-bottom: none;
                }

                .dropdown-item:hover {
                    background-color: #007bff;
                    color: white;
                    font-weight: bold;
                }

                .dropdown-header {
                    font-weight: bold;
                    color: #666;
                    padding: 10px 20px;
                    background-color: #e0e0e0;
                    border-bottom: 1px solid #ddd;
                }

                .dropdown-item.books {
                    color: #17a2b8;
                    font-weight: bold;
                }

                .dropdown-item.magazines {
                    color: #17a2b8;
                    font-weight: bold;
                }

                .dropdown-item.view-all {
                    color: #dc3545;
                    font-weight: bold;
                    text-transform: uppercase;
                }

    </style>
</head>

