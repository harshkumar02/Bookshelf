@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Full-page background image */
        body {
            background: url('~/Account/BG.png') no-repeat center center fixed;
            background-size: cover;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            margin: 100px auto;
            background-color: rgba(255, 255, 255, 0.8); /* Make the background slightly transparent */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 30px;
            }

            .login-container .form-group {
                margin-bottom: 20px;
            }

            .login-container .btn-custom {
                background-color: #007bff;
                color: white;
                width: 100%;
            }

            .login-container .forgot-password {
                text-align: center;
                margin-top: 10px;
            }

            .login-container .social-buttons {
                text-align: center;
                margin-top: 20px;
            }

        .social-buttons a {
            margin: 0 5px;
        }

        .alert-danger {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>LOGIN</h2>

        @* Alert message for login failure *@
        @if (ViewBag.LoginFailed != null && ViewBag.LoginFailed)

        {
            <div class="alert alert-danger">
                Login failed. Please check your email and password and try again.
            </div>
        }

        <form id="account" method="post">
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email Address" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">Keep me logged in</label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-custom">Log In</button>

            <div class="forgot-password">
                <a asp-page="./ForgotPassword">Forgot your password?</a> |
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New User? Register</a>
            </div>
        </form>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
